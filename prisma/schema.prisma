// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Landlord {
  id            String    @id @default(uuid())
  fullName      String
  phoneNumber   String    @unique
  email         String?
  passwordHash  String
  isVerified    Boolean   @default(false)
  verifyToken   String?
  verifyExpires DateTime?
  resetToken    String?
  resetExpires  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  properties    Property[]

  @@map("landlords")
}

model Property {
  id              String    @id @default(uuid())
  name            String
  location        String?
  waterPrice      Float?    @map("water_price")
  electricityPrice Float?   @map("electricity_price")
  landlordId      String    @map("landlord_id")
  landlord        Landlord  @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  units           Unit[]
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("properties")
}

model Unit {
  id          String      @id @default(uuid())
  name        String
  rent        Float
  deposit     Float?
  size        String?
  status      UnitStatus  @default(Vacant)
  imageUrls   String[]    @map("image_urls")
  propertyId  String      @map("property_id")
  property    Property    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  referrals   Referral[]
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("units")
}

model Admin {
  id           String      @id @default(uuid())
  username     String      @unique
  email        String      @unique
  passwordHash String      @map("password_hash")
  referrals    Referral[]
  createdAt    DateTime    @default(now()) @map("created_at")

  @@map("admins")
}

model Referral {
  id          String          @id @default(uuid())
  clientName  String?         @map("client_name")
  clientPhone String?         @map("client_phone")
  clientEmail String?         @map("client_email")
  referralFee Float?          @map("referral_fee")
  status      ReferralStatus  @default(Pending)
  notes       String?
  adminId     String          @map("admin_id")
  admin       Admin           @relation(fields: [adminId], references: [id])
  unitId      String          @map("unit_id")
  unit        Unit            @relation(fields: [unitId], references: [id])
  createdAt   DateTime        @default(now()) @map("created_at")

  @@map("referrals")
}

enum UnitStatus {
  Vacant
  Occupied
}

enum ReferralStatus {
  Pending
  Completed
  Cancelled
}